<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ilife_app_design" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SuperTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/nardo_black</item>
    </style>
    <style name="SCREEN">
        <item name="android:background">@drawable/restaurant</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TVBG">
        <item name="android:backgroundTint">@color/nardo_black</item>
    </style>
    <style name="IMG_EMAIL">
        <item name="android:background">@drawable/envelopedark</item>
    </style>
    <style name="IMG_PHONE">
        <item name="android:background">@drawable/telephonedark</item>
    </style>
    <style name="OPTIONS" parent="SuperTheme">
        <item name="android:backgroundTint">@color/nardo_black</item>
    </style>
</resources>