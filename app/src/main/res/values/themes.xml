<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ilife_app_design" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SuperTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/ilife_white</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@drawable/cafe</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TVBG">
        <item name="android:backgroundTint">@color/ilife_white</item>
    </style>
    <style name="PROF_BG">
        <item name="android:background">@drawable/profile_tv_bg_white</item>
    </style>
    <style name="IMG_EMAIL">
        <item name="android:background">@drawable/envelopelight</item>
    </style>

    <style name="IMG_PHONE">
        <item name="android:background">@drawable/telephonelight</item>
    </style>

    <style name="IMG_DASHBOARD">
        <item name="android:background">@drawable/layoutlight</item>
    </style>

    <style name="IMG_PAYMENT">
        <item name="android:background">@drawable/walletlight</item>
    </style>

    <style name="IMG_FAQ">
        <item name="android:background">@drawable/infolight</item>
    </style>

    <style name="ICON">
        <item name="android:background">@drawable/logo_black</item>
    </style>

    <style name="IMG_SIGNOUT">
        <item name="android:background">@drawable/signoutlight</item>
    </style>

    <style name="Theme.Ilife_app_design.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ilife_app_design.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ilife_app_design.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>